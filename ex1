print("Поиск решений уравнения: 28n + 30k + 31m = 365")

for n in range(1, 13): #Колич месяцев по 28 дней
    for k in range(1, 13): #Колич месяцев по 30 дней
        for m in range(1, 13): #Колич месяцев по 31 дню
            #Проверяем условие уравнения
            if 28 * n + 30 * k + 31 * m == 365:
                print(f"n={n}, k={k}, m={m}")
