import random

print("Магический шар 8")
print("Задавайте вопросы. Для выхода введите 'выход'")

answers = [
    "Бесспорно",
    "Предрешено",
    "Никаких сомнений",
    "Определённо да",
    "Можешь быть уверен в этом",
    "Мне кажется - да",
    "Вероятнее всего",
    "Хорошие перспективы",
    "Знаки говорят - да",
    "Да",
    "Пока неясно, попробуй снова",
    "Спроси позже",
    "Лучше не рассказывать",
    "Сейчас нельзя предсказать",
    "Сконцентрируйся и спроси опять",
    "Даже не думай",
    "Мой ответ - нет",
    "По моим данным - нет",
    "Перспективы не очень хорошие",
    "Весьма сомнительно"
]

while True:
    print("=" * 40)

    question = input("Ваш вопрос: ")

    if question.lower() == "выход":
        print("До свидания!")
        break

    if question.strip() == "":
        print("Введите вопрос!")
        continue

    if question.lower() == "назови число":
        random_number = random.randint(1, 19)
        print(f"Я назову число: {random_number}")
    else:
        answer_index = random.randint(0, 19)
        print(f"Ответ магического шара: {answers[answer_index]}")
